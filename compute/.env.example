# ==============================================================================
# GoldMIND AI - Example Environment File
# Copy this to `.env` and fill in your real values.
# ==============================================================================

# --- Application Info ---
APP_VERSION=v1.0.0
ENVIRONMENT=development
INTERNAL_SHARED_SECRET=replace-with-same-strong-random

# --- API Keys ---
TWELVE_DATA_API_KEY=replace-me
ALPHA_VANTAGE_API_KEY=replace-me
FRED_API_KEY=replace-me
METALPRICE_API_KEY=replace-me
GOLDPRICEZ_API_KEY=replace-me
GOLDMIND_API_KEY=replace-me

# --- Backend URL ---
GOLDMIND_API_URL=https://api.fwvgoldmindai.com

# --- Security ---
JWT_SECRET_KEY=replace-with-strong-random

# --- Server / Gunicorn ---
PORT=5000
WORKERS=4
TIMEOUT=60
DEBUG_MODE=true

# --- Model Config ---
MODEL_PATH=./models/production_goldmind_v1.h5
MODEL_SHA256=replace-me
MODEL_CACHE_TTL=3600
ML_MODELS__TRAINING__ENABLED=true
ML_MODELS__TRAINING__EPOCHS=75
ML_MODELS__TRAINING__SAVE_DIR=./models
ML_MODELS__TRAINING__FILENAME_FORMAT=production_goldmind_{timestamp}.h5
ML_MODELS__TRAINING__SAVE_INTERVAL_EPOCHS=10

# --- TensorFlow / Threads ---
TF_NUM_INTRAOP_THREADS=2
TF_NUM_INTEROP_THREADS=2
OMP_NUM_THREADS=2

# --- Database & Data ---
DATA_DIR=./data
DB_PATH=./data/goldmind_ai.db

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Logging & Monitoring ---
LOG_LEVEL=INFO
LOG_DIR=./logs
# SENTRY_DSN=your-sentry-dsn-here
# SENTRY_TRACES_SAMPLE_RATE=0.1

# --- Security & Request Limits ---
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=60
RATE_LIMIT=100/1min
